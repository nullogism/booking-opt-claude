# Hotel Optimizer Environment Configuration
# Copy to .env and customize

# =============================================================
# REQUIRED: Your optimizer image
# =============================================================
OPTIMIZER_IMAGE=your-optimizer-image:latest

# =============================================================
# Redis Configuration
# =============================================================
REDIS_URL=redis://redis:6379/0

# =============================================================
# Job Queue Settings
# =============================================================
# Maximum seconds a job can run before timeout
MAX_JOB_DURATION=120

# Maximum concurrent jobs per user
MAX_QUEUED_JOBS_PER_USER=3

# How long to keep job results (seconds)
JOB_RESULT_TTL=3600

# =============================================================
# API Configuration
# =============================================================
# Adjust based on your framework (Flask, FastAPI, etc.)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# =============================================================
# Logging
# =============================================================
LOG_LEVEL=INFO

# =============================================================
# SSL (for production)
# =============================================================
# SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
# SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
